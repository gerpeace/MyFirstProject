<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start_acitivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gerpeace.attackmatcher.StartAcitivity">

    <com.gerpeace.attackmatcher.PlayGifView
        android:onClick="goLogin"
        android:id="@+id/startGif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/say_hi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi "/>
    <TextView
        android:id="@+id/skipText"
        android:onClick="goMV"
        android:background="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MV"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_alignParentRight="true"/>

    <TextView
        android:onClick="goLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[ log out ]"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="5dp"
        android:id="@+id/txt_logout" />

    <TextView
        android:onClick="goRegisPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[ register ]"
        android:padding="5dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/txt_logout"
        android:id="@+id/txt_regis" />

</RelativeLayout>
